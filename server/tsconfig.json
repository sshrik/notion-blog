{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "type/*": ["./type/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*", "*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
